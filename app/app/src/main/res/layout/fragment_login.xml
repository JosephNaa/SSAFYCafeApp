<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/coffee_light_white">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        style="@style/Text.Title"
        android:textSize="50dp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/editTextLoginID"
        android:background="@drawable/textview_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="20dp"
        android:hint="ID"
        style="@style/Text.Regular" />

    <EditText
        android:background="@drawable/textview_regular"
        android:id="@+id/editTextLoginPW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="20dp"
        android:hint="PW"
        style="@style/Text.Regular" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">

        <Button
            android:id="@+id/btnLogin"
            app:backgroundTint = "@null"
            android:background="@drawable/button_regular"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btnJoin"
            app:backgroundTint = "@null"
            android:background="@drawable/button_regular"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="JOIN"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGoogle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="구글 로그인"
            />

        <com.nhn.android.naverlogin.ui.view.OAuthLoginButton
            android:id="@+id/btnNaver"
            android:layout_width="87dp"
            android:layout_height="31dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_naver_small"
            />

        <ImageButton
            android:id="@+id/btnKakao"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/kakao_login_small"
            android:background="@null"
            />
    </LinearLayout>


</LinearLayout>